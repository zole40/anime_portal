@model List<Bll.DTO.AnimeModel.AnimeHeaderIndex>
@{
    int number = Model.Count;
    int count = 0;
    bool activate = false;
}

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (int i = 0; i < number; i++)
        {
            if (i % 4 == 0)
            {
                if (i == 0)
                {
                    <li data-target="#carousel-example-generic" data-slide-to="@count" class="active"></li>
                }
                else
                {
                    <li data-target="#carousel-example-generic" data-slide-to="@count"></li>
                }
                count++;
            }
        }
        @{
            count = 0;
        }
    </ol>
    <div class="carousel-inner">
        @foreach (var anime in Model)
        {
            if (count % 4 == 0)
            {
                if (!activate)
                {
                    @:<div class="item active">
                }
                else
                {
                    @:<div class="item">
                }
            }
            <a href="@Url.Action("Details", "Animes" , new { friendlyUrl = anime.FriendlyUrl },null)">
                <div class="col-lg-4">
                    <div class="tarolo">
                        <div class="sor2">
                            <span> @anime.Name </span>
                          
                            <br /><span class="genre">@anime.Category</span>
                        </div>
                        <div class="kep"><img src="~/Upload/AnimePicture/@anime.PictureUrl" style="width:100%" /></div>
                    </div>
                </div>
            </a>
            if (count % 4 == 3)
            {
                if (!activate)
                {
                    @:</div>
            activate = true;
                }
                else
                {
                    @:</div>
                }
            }
            count++;
        }

    </div>
</div>
<a class="left" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
</a>
<a class="right" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
</a>

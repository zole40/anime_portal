@model IEnumerable<Bll.DTO.AnimeModel.AnimeManagement>



<table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
    <thead>
        <tr role="row">
            <th class="sorting_asc" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 189px;">@Html.DisplayNameFor(model => model.AnimeName)</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 277px;">@Html.DisplayNameFor(model => model.UserName)</th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 248px;">@Html.DisplayNameFor(model => model.Edit)</th>
        </tr>
    </thead>

    <tfoot>
        <tr>
            <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.AnimeName)</th>
            <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.UserName)</th>
            <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.Edit)</th>
        </tr>
    </tfoot>
    <tbody role="alert" aria-live="polite" aria-relevant="all">
        @foreach (var item in Model)
            {
            <tr class="odd">
                <td class=" sorting_1">@item.AnimeName</td>
                <td class=" ">@item.UserName</td>
                <td class=" ">
                @if (item.Edit == 0)
                {
                    <div class="btn-group" >

                            <a class="accept btn btn-success" href="@Url.Action("accept","Animes",new { friendlyUrl =  item.friendlyUrl, userId = item.UserId})"><i class="fa fa-check"></i></a>

                            <a class="accept btn btn-danger" href="@Url.Action("reject","Animes",new { friendlyUrl =  item.friendlyUrl, userId = item.UserId})"><i class="fa fa-times"></i></a>
                    </div>
                }
                else if (item.Edit == 1)
                {
                    <div class="btn-group">

                            <a class="btn btn-success" href="@Url.Action("accept","Animes",new { friendlyUrl =  item.friendlyUrl, userId = item.UserId})"><i class="fa fa-check"></i></a>


                            <a class="btn" href="@Url.Action("reject","Animes",new { friendlyUrl =  item.friendlyUrl, userId = item.UserId})"><i class="fa fa-times"></i></a>

                    </div>
                }
                else if (item.Edit == 2)
                {
                    <div class="btn-group">

                            <a class="btn" href="@Url.Action("accept","Animes",new { friendlyUrl =  item.friendlyUrl, userId = item.UserId})" ><i class="fa fa-check"></i></a>


                            <a class="btn btn-danger" href="@Url.Action("reject","Animes",new { friendlyUrl =  item.friendlyUrl, userId = item.UserId})"><i class="fa fa-times"></i></a>

                    </div>
                }
                </td>
            </tr>
        }


    </tbody>
</table>
<script>

    $(function () {
        $("#example1").dataTable();
        $('#example2').dataTable({
            "bPaginate": true,
            "bLengthChange": false,
            "bFilter": false,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": false
        });
    });

</script>


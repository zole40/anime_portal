@model Bll.DTO.MailHeaderData

<div class="box box-info">
    <div class="box-header">
        <i class="fa fa-envelope"></i>
        <h3 class="box-title">Quick Email</h3>
    </div>
    <div class="box-body">
            <div class="form-group">
              To: <label name="To">@Model.To</label>
                <input type="text" hidden name="To" value="@Model.To"/>         
               </div>
            <div class="form-group">
                <input type="text" class="form-control" name="Title" placeholder="Subject" />
            </div>
            <div>
                <textarea class="textarea" placeholder="Message" style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" name="Text"></textarea>
            </div>
    </div>
    <div class="box-footer clearfix">
        <button class="pull-right btn btn-default" id="sendEmail">Send <i class="fa fa-arrow-circle-right"></i></button>
    </div>
</div>
